<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundgradient"
    tools:context=".buyer.CategoryActivity">


    <ImageView
        android:onClick="onClickViewProfile"
        android:id="@+id/imageView3"
        android:layout_width="70dp"
        android:layout_height="71dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/round_border"
        android:src="@drawable/avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="Xin chào user123!"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="Chọn mặt hàng mà bạn muốn mua"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <FrameLayout
        android:layout_width="419dp"
        android:layout_height="448dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="315dp"
            android:layout_marginTop="150sp"
            android:background="@drawable/round_border_white"
            tools:layout_editor_absoluteX="-57dp"
            tools:layout_editor_absoluteY="449dp">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="155dp"
                android:layout_height="24dp"
                android:layout_marginTop="76dp"
                android:layout_marginEnd="28dp"
                android:onClick="onClickShowList"
                android:text="Xem tất cả sản phầm"
                android:textColor="#3299a8"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ListView
                android:id="@+id/list1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:divider="@android:color/transparent"
                android:dividerHeight="10.0sp"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView12" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <HorizontalScrollView
            android:layout_width="420dp"
            android:layout_height="177dp"
            android:layout_marginTop="24dp"
            android:paddingLeft="20dp"
            android:paddingRight="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchView">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="100sp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.9"
                        android:backgroundTint="@android:color/transparent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bottle" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:text="Thuỷ tinh"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20sp"
                    android:orientation="vertical">

                    <ImageButton
                        android:onClick="onClickCategoryElectronics"
                        android:layout_width="100sp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.9"
                        android:backgroundTint="@android:color/transparent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ffd79f92abbe7bfa894cd1c138c2b3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:text="Điện tử"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20sp"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="100sp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.9"
                        android:backgroundTint="@android:color/transparent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/book" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:text="Giấy"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20sp"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="100sp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.9"
                        android:backgroundTint="@android:color/transparent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/battery" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:text="Pin"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20sp"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="100sp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.9"
                        android:backgroundTint="@android:color/transparent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/metal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:text="Phế liệu"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20sp"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="100sp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.9"
                        android:backgroundTint="@android:color/transparent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/miscellaneous" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:text="Các loại khác"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>


    </FrameLayout>

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="371dp"
        android:layout_height="39dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/white"
        android:queryHint="Tìm kiếm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <ImageView
        android:onClick="onClickViewHistory"
        android:id="@+id/imageView4"
        android:layout_width="48dp"
        android:layout_height="51dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icons8buy90white" />


</androidx.constraintlayout.widget.ConstraintLayout>