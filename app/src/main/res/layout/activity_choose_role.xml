<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundgradient"
    tools:context=".ChooseRoleActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="324dp"
        android:layout_height="66dp"
        android:layout_marginTop="96dp"
        android:gravity="center"
        android:text="Chọn vai trò của bạn"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="27sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:onClick="onClickBuyer"
        android:id="@+id/imageButton"
        android:layout_width="255dp"
        android:layout_height="166dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        android:scaleType="fitXY"
        android:backgroundTint="@android:color/transparent"
        app:srcCompat="@drawable/setpeoplecarryingshoppingbags_232148251354_3"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="160dp"
        android:layout_height="57dp"
        android:gravity="center"
        android:text="Người mua"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton"
        app:layout_constraintEnd_toEndOf="@+id/imageButton"
        app:layout_constraintStart_toStartOf="@+id/imageButton"
        app:layout_constraintTop_toTopOf="@+id/imageButton" />

    <ImageButton
        android:onClick="onClickSeller"
        android:id="@+id/imageButton2"
        android:layout_width="255dp"
        android:layout_height="166dp"
        android:layout_marginTop="32dp"
        android:scaleType="fitXY"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton"
        app:srcCompat="@drawable/a4454_3" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="142dp"
        android:layout_height="43dp"
        android:gravity="center"
        android:text="Người bán"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageButton2"
        app:layout_constraintEnd_toEndOf="@+id/imageButton2"
        app:layout_constraintStart_toStartOf="@+id/imageButton2"
        app:layout_constraintTop_toTopOf="@+id/imageButton2" />
</androidx.constraintlayout.widget.ConstraintLayout>